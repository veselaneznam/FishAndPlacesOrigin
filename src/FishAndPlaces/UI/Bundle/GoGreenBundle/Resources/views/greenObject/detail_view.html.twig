{% extends '@GoGreen/base.html.twig' %}
{% block content %}
    {{ parent() }}
    <div class="row container_custome">

            <div class="col-lg-6">
                <h3>{{ greenObject.name }}</h3>
            </div>
        <br />
        <div class="col-lg-12" >
    {% include '@GoGreen/greenObject/galery.html.twig' %}
            <div class="col-lg-6 text-justify">
                <table class="table table-condensed">
                    <thead>
                    <tr colspan="2">
                        <th><h3>{% trans %}Info{% endtrans %}</h3></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="color: green; font-weight: bold;">{% trans %}Rating{% endtrans %}</td> <td>{{ greenObject.rating }}</td>
                    </tr>
                        <tr>
                            <td style="color: green; font-weight: bold;">{% trans %}Price{% endtrans %}</td> <td>{{ greenObject.priceProPerson }}</td>
                        </tr>
                        <tr>
                        <td style="color: green; font-weight: bold;">{% trans %}Address{% endtrans %}</td> <td>{{ greenObject.address }}</td>
                    </tr>
                    <tr>
                        <td style="color: green; font-weight: bold;">{% trans %}See on Map{% endtrans %}</td> <td><a href="{{ path('green_object_map_direction', {'id': greenObject.id}) }}">{% trans %}Directions{% endtrans %}</a></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6 text-justify">
    {% include '@GoGreen/greenObject/greenObject_fish_collection.html.twig' %}
            </div>
        </div>
        <div class="col-lg-12 text-justify">
            <p>{{ greenObject.description | raw }}</p>
            <div id="disqus_thread"></div>
        </div>
    </div>
    <script>
        //Uncomment when its deployed
         {#var disqus_config = function () {#}
         {#this.page.url = {{ path('greenObject_view', {'id': greenObject.id}) }};  // Replace PAGE_URL with your page's canonical URL variable#}
         {#this.page.identifier = {{ path(greenObject.id) }}; // Replace PAGE_IDENTIFIER with your page's unique identifier variable#}
         {#};#}
        (function() { // DON'T EDIT BELOW THIS LINE
            var d = document, s = d.createElement('script');
            s.src = 'https://ribar-bg.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

{% endblock %}
