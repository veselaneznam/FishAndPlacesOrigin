{% extends '@Admin/base.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="container">
        {% include '@Admin/add_images.html.twig' %}
        {% if greenObjectImageCollection is defined %}
            <div class="row text-center">

                {% for greenObjectImage in greenObjectImageCollection %}
                    {% if greenObjectImage.isMain == 0 %}
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                        <a class="thumbnail" href="{{ path('green_object_view', {'id': greenObjectImage.greenObject.id}) }}">
                            <img class="img-responsive" src="{{  greenObjectImage.webPath }}" alt="{{ greenObjectImage.greenObject.name }}">
                            <span>{{ greenObjectImage.greenObject.name }}</span>
                        </a>
                        <a href="{{ path('green_object_images_delete', { 'id': greenObjectImage.id }) }}"
                           class="btn delete btn-danger" role="button">Delete
                        </a>
                    </div>
                {% endif %}
                {% endfor %}
            </div>

        {% endif %}
    </div>
{% endblock %}
